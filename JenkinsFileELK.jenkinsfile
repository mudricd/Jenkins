                    removeColor: false,
                    verbose: true,
                    credential: '',
                    extraVars: '''---
        my_var:  "Jenkins Test Kibana"''',
                    async: false
                )
    }
}
        stage('Deploy Logstash'){
            steps{
                ansibleTower(
                    towerServer: 'TestTower',
                    templateType: 'job',
                    jobTemplate: 'Logstash',
                    importTowerLogs: true,
                    inventory: 'AWS dynamic inventory',
                    jobTags: '',
                    skipJobTags: '',
